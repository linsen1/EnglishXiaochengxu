/* pages/filminfo/filminfo.wxss */
/**index.wxss**/

.container {
  margin: 0 auto;
  position: relative;
  width: 98%;
  display: flex;
  flex-direction: column;
}

.top {
  margin-top: 6px;
  width: 100%;
}

.BR {
  height: 4px;
}

.wordtext {
  background-color: white;
  padding: 8px;
  font-size: 13pt;
  text-align: left;
  line-height: 20pt;
}

.chinese {
  background-color: white;
  padding-top: 0px;
  padding-bottom: 8px;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 13pt;
  text-align: justify;
  line-height: 20pt;
}

.xiaobian {
  text-align: left;
  font-size: 12pt;
  color: #ea4961;
  margin-top: 5px;
  padding-left: 2px;
}

.xiaobian_content {
  background-color: white;
  margin-top: 5px;
  padding: 10px;
  font-size: 12pt;
  text-align: justify;
  color: #888;
  line-height: 18pt;
}



.content {
  font-size: 11pt;
  color: #888;
  text-align: justify;
  padding-left: 8px;
}

.favrate {
  position: fixed;
  bottom: 0px;
  height: 40px;
  width: 100%;
  background-color: white;
}

.favrate-content {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.favrate-space {
  width: 68%;
}

.favrate-add {
  width: 15%;
  margin-top: 5px;
  margin-bottom: 5px;
  text-align: center;
}

.favrate-share {
  width: 15%;
  margin-top: 5px;
  margin-bottom: 5px;
  text-align: center;
}

.favrate-right {
  width: 2%;
}

.englishWord {
  margin-bottom: 40px;
}

.film {
  height: 225px;
  display: flex; /*Flex布局*/
  display: -webkit-flex; /* Safari */
  align-items: center;
  text-align: center;
}

.myVideo {
  margin-top: 12px;
  width:100%; 
  display: flex; /*Flex布局*/
  display: -webkit-flex; /* Safari */
  align-items: center;
  text-align: center;
}

.dialog{
  font-size: 13pt;
  justify-content: center;
  background-color: white;
  line-height: 22pt;
  padding: 10px;
}
.dialogtrans{
  font-size: 13pt;
  justify-content: center;
  background-color: white;
  line-height: 22pt;
  padding: 10px;
  color: #888;
}

