/* pages/song/index/index.wxss */
.container {
  margin: 0 auto;
  width: 98%;
  display: flex;
  flex-direction: column;
  position: relative;
}


.symbolSongInfo{
  display: flex;
  background-color: white;
  width: 100%;
  align-items: center;
  margin-top: 6px;
  flex-flow: column;
}
.symbolSongInfo .songNav{
  width: 100%;
  color: #ea4961;
  font-size: 12pt;
  background-color: #f6f6f6;
  padding-bottom: 6px;
}
.symbolSongInfo .songContent{
  width: 100%;
  height: 80px;
  display: flex;
}
.songContent .songimg{
  flex:1 1 25%;
  display: flex;
  align-items: center;
  justify-content:flex-start;
}
.songBaseInfo{
  flex: 1 1 65%;
  display: flex;
  justify-content:center;
  flex-flow: column;
}
.songBaseInfo .songTitle{
  width: 100%;
  font-size: 14pt;
  display: flex;
  align-items: center;
  justify-content:flex-start;
}
.songBaseInfo .songAuthor{
  width: 100%;
  font-size: 12pt;
  color: #888;
  display: flex;
  align-items: center;
  justify-content:flex-start;
}
.songInfo{
  flex: 1 1 10%;
  display: flex;
  align-items: center;
  justify-content:flex-start;
}
.line {
  width: 100%;
  height: 2px;
  background-color: #f6f6f6;
}
.loadingMore{
  text-align: center;
  height: 12pt;
  line-height: 12pt;
  margin-top: 8px;
  color: #888;
}